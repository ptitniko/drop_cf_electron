# Configuration des améliorations de robustesse du hotfolder

# Timeouts (en millisecondes)
PROCESSING_TIMEOUT=600000          # 10 minutes - Timeout global pour chaque traitement
FILE_STABILITY_DURATION=3000       # 3 secondes - Durée pour vérifier la stabilité d'un fichier
FILE_STABILITY_CHECKS=3            # 3 vérifications - Nombre de vérifications de stabilité requises

# Polling adaptatif
POLLING_BASE_INTERVAL=5000         # 5 secondes - Intervalle de base pour le polling
POLLING_MAX_INTERVAL=60000         # 60 secondes - Intervalle maximum en cas d'erreurs
POLLING_MAX_CONSECUTIVE_ERRORS=10  # 10 erreurs max - Nombre d'erreurs consécutives avant abandon

# Watcher
WATCHER_SCAN_INTERVAL=30000        # 30 secondes - Intervalle de scan périodique du hotfolder
WATCHER_SAFETY_TIMEOUT=900000      # 15 minutes - Timeout de sécurité par fichier dans le watcher

# Configuration API (existante)
API_URL=https://your-api-url.com
CLIENT=YOUR_CLIENT_NAME
CUSTOMER=YOUR_CUSTOMER_NAME
PADDING=0
