{
    "name": "drop-to-cf",
    "version": "1.5.1",
    "description": "Application de communication avec la creative factory pour le traitement de photo",
    "author": "Nicolas Filloleau",
    "main": "main.js",
    "repository": {
        "type": "git",
        "url": "git@github.com:ptitniko/drop_cf_electron.git"
    },
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "electron-builder --win",
        "build:win:x64": "electron-builder --win --x64",
        "build:mac": "electron-builder --mac",
        "build:all": "electron-builder --win --x64 --mac",
        "build:multi": "npm run build:win:x64 && npm run build:mac"
    },
    "build": {
        "files": [
            "**/*",
            ".env"
        ],
        "appId": "com.photoelectron.app",
        "publish": [
            {
                "provider": "github",
                "owner": "ptitniko",
                "repo": "drop_cf_electron"
            }
        ],
        "mac": {
            "sign": false,
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    },
    "dependencies": {
        "axios": "^1.10.0",
        "chart.js": "^4.4.9",
        "chokidar": "^3.5.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "electron-updater": "^6.6.2",
        "exiftool-vendored": "^23.7.0",
        "express": "^4.18.2",
        "form-data": "^4.0.3",
        "fs-extra": "^11.3.0",
        "jimp": "^1.6.0",
        "xmldom": "^0.6.0"
    },
    "devDependencies": {
        "electron": "^29.0.0",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    }
}
