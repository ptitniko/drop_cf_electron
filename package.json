{
    "name": "drop-to-cf",
    "version": "1.2.0",
    "description": "Application de communication avec la creative factory pour le traitement de photo",
    "author": "Nicolas Filloleau",
    "main": "main.js",
    "repository": {
        "type": "git",
        "url": "git@github.com:ptitniko/drop_cf_electron.git"
    },
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "electron-builder --win"
    },
    "build": {
        "files": [
            "**/*",
            ".env"
        ],
        "appId": "com.photoelectron.app",
        "publish": [
            {
                "provider": "github",
                "owner": "ptitniko",
                "repo": "drop_cf_electron"
            }
        ],
        "mac": {
            "sign": false,
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": "nsis"
        }
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chart.js": "^4.4.9",
        "chokidar": "^3.5.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "electron-updater": "^6.6.2",
        "exiftool-vendored": "^23.7.0",
        "express": "^4.18.2",
        "form-data": "^4.0.2",
        "fs-extra": "^11.1.1",
        "jimp": "^1.6.0"
    },
    "devDependencies": {
        "electron": "^29.0.0",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    }
}
